<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32sp"
    tools:context=".FilmCautionActivity" >

    <TextView
        android:id="@+id/filmCautionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="@font/pretendard800"
        android:text="촬영 시 주의 사항"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32sp"
        android:layout_weight="1"
        android:padding="16sp"
        android:background="@drawable/edge">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:fontFamily="@font/pretendard500"
            android:padding="16sp"
            android:text="@string/caution"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/filmStartButton"
        android:layout_width="200sp"
        android:layout_height="64sp"
        android:layout_marginTop="24sp"
        android:layout_gravity="center"
        android:background="@drawable/button_highlight"
        android:fontFamily="@font/pretendard700"
        android:text="촬영 시작하기!"
        android:textColor="@color/white"
        android:textSize="24sp" />
</LinearLayout>